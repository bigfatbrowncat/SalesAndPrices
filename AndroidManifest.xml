<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.salesandprices"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.salesandprices.PriceListActivity"
            android:label="@string/app_name" android:theme="@style/PricesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.salesandprices.UpdateDataActivity"
            android:label="@string/title_activity_update_data" android:theme="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        </activity>
        <activity android:name="com.example.salesandprices.ProductShowcaseActivity" android:label="@string/product_showcase_activity_title"></activity>
    </application>

</manifest>
